<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

<package name="file" extends="struts-default" namespace="/">

	<action name="uploadfile" class="com.file.action.FileAction" method="upload">
		<result name="upload_success">/WEB-INF/file/fileUpAndDown.jsp</result>
	</action>

	<action name="downloadfile" class="com.file.action.FileAction" method="download">
		<result name="download_success" type="stream">
			<param name="bufferSize">2048</param>
			<param name="contentType">application/octet-stream</param>
			<param name="inputName">inputStream</param>
			<param name="contentDisposition">attachment;filename="${downloadFileName}"</param>
		</result>
	</action>

</package>

</struts>