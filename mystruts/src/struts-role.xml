<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
<package name="role" namespace="/"  extends="struts-default">	
		
		<!-- 通配符*_*  表示： add_Role,list_Role,get_Role,delete_Role,update_Role,search_Role,... -->
		
		<action name="*_*" class="com.role.action.{2}Action"  method="{1}">
			<result name="add">/WEB-INF/role/add_Role.jsp</result>
			<result name="success">/WEB-INF/role/list_Role.jsp</result>
		</action>
  
	</package>


</struts>